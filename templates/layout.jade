!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      meta(name='description', content=locals.description)
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href='http://fast.fonts.net/cssapi/387d2aef-8464-47e7-885c-8f1f92b50f81.css')
      link(rel='stylesheet', href='/css/base.css')
      link(rel='stylesheet', href='/css/site.css')
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)= locals.name
            .description
              !=contents['about.md'].html
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          // section.about
          //   !=contents['about.md'].html
          // section.copy
          //   p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
          //     a(href='https://github.com/jnordberg/wintersmith') Wintersmith
          section.footer-text
            p
              a(href='/') Milosz.is
          section.footer-icons
            a(href='/bucket-list', class='icon bucket')
              span bucket
            a(href='/feed.xml', class='icon feed')
              span feed