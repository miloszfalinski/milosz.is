!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      meta(name='description', content=locals.description)
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      
      // Stylesheets
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href='http://fast.fonts.net/cssapi/387d2aef-8464-47e7-885c-8f1f92b50f81.css')
      link(rel='stylesheet', href='/css/base.css')
      link(rel='stylesheet', href='/css/site.css')
      
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          h1
            a(href=locals.url)
              span.front
              span.back
                  
    section#intro
      div.content-wrap
        block intro
          div.intro
            h2 Designer &amp; Developer
            .description
              !=contents['intro.md'].html
            .icons
              .icon-container(id='mail')
                a(href='mailto:m@milosz.is', class='icon')
                  span.front
                  span.back
              .icon-container(id='twitter')
                a(href='http://twitter.com/dotmilosz', class='icon')
                  span.front
                  span.back
              .icon-container(id='dribbble')
                a(href='http://dribbble.com/milosz', class='icon')
                  span.front
                  span.back
              .icon-container(id='rdio')
                a(href='http://www.rdio.com/people/miloszfalinski/', class='icon')
                  span.front
                  span.back
              .icon-container(id='github')
                a(href='https://github.com/miloszfalinski', class='icon')
                  span.front
                  span.back
              
    div#content
      block content
    footer
      div.content-wrap
        block footer
          section.footer-text
            p
              a(href=locals.url) Milosz.is
          section.footer-icons
            a(href='/bucket-list', class='icon bucket')
              span bucket
            a(href='/feed.xml', class='icon feed')
              span feed
              
    // Scripts
    script(src='/bower_components/zepto/zepto.min.js')
    script(src='/scripts/script.js')